  "license": "MIT",
  "scripts": {
    "prod:build": "(rm -rf ./build || true ) && tsc -p release.tsconfig.json",
    "migrate:down": "knex migrate:down",
    "migrate:up": "knex migrate:up",
    "migrate:latest": "knex migrate:latest",
    "migrate:reset": "knex migrate:rollback --all && knex migrate:latest",
    "watch": "tsc --watch -p release.tsconfig.json",
    "lint:check": "eslint src/** && prettier --check ./src/**/*.ts",
    "lint:fix": "eslint src/** --fix && prettier --write ./src/**/*.ts"
  },
  "dependencies": {
    "@types/node": "^20.2.1",
    "async-retry": "^1.3.3",
    "better-sqlite3": "^8.3.0",
    "dotenv": "^16.0.3",
    "knex": "^2.4.2",
    "koa": "^2.14.2",
    "lodash": "^4.17.21",
    "node-cron": "^3.0.2",
    "pm2": "^5.3.0",
    "undici": "^5.22.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "knex-types": "^0.5.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
