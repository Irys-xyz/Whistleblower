{
  "name": "whistleblower",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/Bundlr-Network/Whistleblower.git",
  "author": "JesseTheRobot <jesse@bundlr.network>",
  "license": "MIT",
  "scripts": {
    "build": "(rm -rf ./build || true ) && npx tsc -p release.tsconfig.json && npx resolve-tspaths -p release.tsconfig.json",
    "start": "node ./build/src/bin/Whistleblower.js",
    "restart": "npm run build && npm run start",
    "init-wb": "npx ts-node ./scripts/init.ts",
    "add-bundler": "npx ts-node ./scripts/addBundler.ts",
    "migrate:down": "knex migrate:down",
    "migrate:up": "knex migrate:up",
    "migrate:latest": "knex migrate:latest",
    "migrate:reset": "knex migrate:rollback --all && knex migrate:latest",
    "watch": "npx tsc --watch -p release.tsconfig.json",
    "lint:check": "eslint src/** && prettier --check ./src/**/*.ts",
    "lint:fix": "eslint src/** --fix && prettier --write ./src/**/*.ts"
  },
  "dependencies": {
    "@supercharge/promise-pool": "^2.4.0",
    "@types/node": "^20.2.1",
    "arbundles": "^0.9.6",
    "arweave": "^1.13.7",
    "async-retry": "^1.3.3",
    "axios": "^1.4.0",
    "better-sqlite3": "^8.3.0",
    "bignumber.js": "^9.1.1",
    "commander": "^10.0.1",
    "cron": "^2.3.0",
    "dotenv": "^16.0.3",
    "knex": "^2.4.2",
    "koa": "^2.14.2",
    "lodash": "^4.17.21",
    "node-cron": "^3.0.2",
    "piscina": "^4.1.0",
    "pm2": "^5.3.0",
    "resolve-tspaths": "^0.8.13",
    "tsc": "^2.0.4",
    "winston": "^3.8.2",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.5",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "=5.1.5"
  }
}