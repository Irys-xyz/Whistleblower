{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "moduleResolution": "nodenext",
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "importHelpers": true,
      "declaration": false,
      "outDir": "lib",
      "lib": [
        "esnext",
        "ES2022",
        "DOM"
      ],
      "esModuleInterop": true,
      "alwaysStrict": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitAny": false,
      "noImplicitThis": false,
      "strictNullChecks": true,
      "experimentalDecorators": true,
      "strict": true,
      "baseUrl": "./src",
      "rootDir": ".",
      "paths": {
        "@logger": ["utils/logger"],
        "@db/*": ["db/*"],
        "@utils": ["utils/index"],
        "@utils/*": ["utils/*"],
        "@/*": ["./*"],
      }
    },
    "ts-node": {
      "require": ["tsconfig-paths/register"],
      "esm": false,
      "transpileOnly": true,
      "compilerOptions": {
        "module": "CommonJS"
      }
    },
    "include": [
      "src/**/*",
      "tests/**/*",
      "migrations/**/*",
      "__mocks__/**/*",
      "knexfile.ts",
      "scripts/*.ts",
      "config.ts",
      "test.ts",
      "alert.ts"
    ]
  }
  